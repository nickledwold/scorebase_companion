<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/infoPanelImageView"
        android:layout_width="540dp"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/greypanel" />

    <ImageView
        android:id="@+id/roleInfoPanel"
        android:layout_width="540dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/submitButton"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/greypanel" />

    <ImageView
        android:id="@+id/scorePanelImageView"
        android:layout_width="265dp"
        android:layout_height="125dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        app:background="@drawable/bluepanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoPanelImageView"
        app:srcCompat="@drawable/bluepanel" />

    <ImageView
        android:id="@+id/scorePanelImageView2"
        android:layout_width="265dp"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        app:background="@drawable/bluepanel"
        app:layout_constraintStart_toEndOf="@+id/scorePanelImageView"
        app:layout_constraintTop_toBottomOf="@+id/infoPanelImageView"
        app:srcCompat="@drawable/bluepanel" />

    <ImageView
        android:id="@+id/scorePanelImageView3"
        android:layout_width="265dp"
        android:layout_height="125dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:background="@drawable/bluepanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scorePanelImageView"
        app:srcCompat="@drawable/bluepanel" />

    <ImageView
        android:id="@+id/scorePanelImageView4"
        android:layout_width="265dp"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:background="@drawable/bluepanel"
        app:layout_constraintStart_toEndOf="@+id/scorePanelImageView3"
        app:layout_constraintTop_toBottomOf="@+id/scorePanelImageView2"
        app:srcCompat="@drawable/bluepanel" />

    <ImageView
        android:id="@+id/scorebaseImageView"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="scoreBasePressed"
        app:layout_constraintBottom_toBottomOf="@+id/roleInfoPanel"
        app:layout_constraintStart_toStartOf="@+id/roleInfoPanel"
        app:layout_constraintTop_toTopOf="@+id/roleInfoPanel"
        app:srcCompat="@drawable/logowhite"
        tools:srcCompat="@drawable/logowhite" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="415dp"
        android:layout_height="130dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/submit_button_background"
        android:fontFamily="@font/myriadr"
        android:onClick="submitButtonpressed"
        android:text="SUBMIT"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/oneButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/fourButton"
        app:layout_constraintEnd_toStartOf="@+id/twoButton" />

    <Button
        android:id="@+id/threeButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/sixButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/sixButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="6"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/nineButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nineButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="9"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/deleteButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/twoButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/fiveButton"
        app:layout_constraintEnd_toStartOf="@+id/threeButton" />

    <Button
        android:id="@+id/fiveButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/eightButton"
        app:layout_constraintEnd_toStartOf="@+id/sixButton" />

    <Button
        android:id="@+id/eightButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="8"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/zeroButton"
        app:layout_constraintEnd_toStartOf="@+id/nineButton" />

    <Button
        android:id="@+id/fourButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/sevenButton"
        app:layout_constraintEnd_toStartOf="@+id/fiveButton" />

    <Button
        android:id="@+id/sevenButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="7"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/decimalButton"
        app:layout_constraintEnd_toStartOf="@+id/eightButton" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:adjustViewBounds="false"
        android:background="@drawable/keypad_button_pressed"
        android:drawableStart="@drawable/delete"
        android:drawablePadding="30dp"
        android:onClick="deleteButtonpressed"
        android:scaleType="fitCenter"
        android:src="@drawable/delete"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/decimalButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button_pressed"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="."
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toStartOf="@+id/zeroButton" />

    <Button
        android:id="@+id/zeroButton"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/keypad_button"
        android:fontFamily="@font/myriadr"
        android:onClick="keypadPressed"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toStartOf="@+id/deleteButton" />

    <TextView
        android:id="@+id/judgeNameTextView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/myriadr"
        android:maxLines="1"
        android:text="SURNAME FirstName"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/roleInfoPanel"
        app:layout_constraintEnd_toEndOf="@+id/roleInfoPanel"
        tools:text="SURNAME FirstName" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/myriadr"
        android:text="10"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/scorePanelImageView"
        app:layout_constraintEnd_toEndOf="@+id/scorePanelImageView"
        app:layout_constraintStart_toStartOf="@+id/scorePanelImageView"
        app:layout_constraintTop_toTopOf="@+id/scorePanelImageView" />

    <TextView
        android:id="@+id/score2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/myriadr"
        android:text="0.0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/scorePanelImageView2"
        app:layout_constraintEnd_toEndOf="@+id/scorePanelImageView2"
        app:layout_constraintStart_toStartOf="@+id/scorePanelImageView2"
        app:layout_constraintTop_toTopOf="@+id/scorePanelImageView2" />

    <TextView
        android:id="@+id/score3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/myriadr"
        android:text="0.0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/scorePanelImageView3"
        app:layout_constraintEnd_toEndOf="@+id/scorePanelImageView3"
        app:layout_constraintStart_toStartOf="@+id/scorePanelImageView3"
        app:layout_constraintTop_toTopOf="@+id/scorePanelImageView3" />

    <TextView
        android:id="@+id/score4TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/myriadr"
        android:text="0.0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/scorePanelImageView4"
        app:layout_constraintEnd_toEndOf="@+id/scorePanelImageView4"
        app:layout_constraintStart_toStartOf="@+id/scorePanelImageView4"
        app:layout_constraintTop_toTopOf="@+id/scorePanelImageView4" />

    <TextView
        android:id="@+id/scoreTextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/myriadr"
        android:text="Elements"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/scoreTextView"
        app:layout_constraintEnd_toEndOf="@+id/scorePanelImageView"
        app:layout_constraintStart_toStartOf="@+id/scorePanelImageView"
        app:layout_constraintTop_toTopOf="@+id/scorePanelImageView" />

    <TextView
        android:id="@+id/score2TextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/myriadr"
        android:text="H"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/score2TextView"
        app:layout_constraintEnd_toEndOf="@+id/scorePanelImageView2"
        app:layout_constraintStart_toStartOf="@+id/scorePanelImageView2"
        app:layout_constraintTop_toTopOf="@+id/scorePanelImageView2" />

    <TextView
        android:id="@+id/score3TextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/myriadr"
        android:text="T"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/score3TextView"
        app:layout_constraintEnd_toEndOf="@+id/scorePanelImageView3"
        app:layout_constraintStart_toStartOf="@+id/scorePanelImageView3"
        app:layout_constraintTop_toTopOf="@+id/scorePanelImageView3" />

    <TextView
        android:id="@+id/score4TextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/myriadr"
        android:text="Penalty"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/score4TextView"
        app:layout_constraintEnd_toEndOf="@+id/scorePanelImageView4"
        app:layout_constraintStart_toStartOf="@+id/scorePanelImageView4"
        app:layout_constraintTop_toTopOf="@+id/scorePanelImageView4" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="490dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:fontFamily="@font/myriadr"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/clubTextView"
        app:layout_constraintStart_toStartOf="@+id/infoPanelImageView"
        app:layout_constraintTop_toTopOf="@+id/infoPanelImageView"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/clubTextView"
        android:layout_width="490dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:ellipsize="end"
        android:fontFamily="@font/myriadbold"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/categoryTextView"
        app:layout_constraintStart_toStartOf="@+id/infoPanelImageView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="490dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/myriad"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/infoPanelImageView"
        app:layout_constraintStart_toStartOf="@+id/infoPanelImageView"
        app:layout_constraintTop_toBottomOf="@+id/clubTextView" />

    <TextView
        android:id="@+id/otherInfoTextView"
        android:layout_width="490dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="13dp"
        android:ellipsize="end"
        android:fontFamily="@font/myriad"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/roleInfoPanel"
        app:layout_constraintEnd_toEndOf="@+id/scorePanelImageView4"
        tools:text="Exercise 1 | Flight 1 | No 2/14" />

    <TextView
        android:id="@+id/panelAndRoleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/myriad"
        android:text="P1 | E4"
        android:onClick="panelAndRoleTextViewPressed"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/roleInfoPanel"
        app:layout_constraintTop_toTopOf="@+id/roleInfoPanel"
        tools:text="P1 | E4" />

</androidx.constraintlayout.widget.ConstraintLayout>