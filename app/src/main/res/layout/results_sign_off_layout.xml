<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/results_sign_off_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg_blue"
    android:orientation="vertical"
    android:textAlignment="center">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="1000sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/myriadr"
        android:gravity="center"
        android:padding="10dp"
        android:text="Please sign below:"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="450sp"
        android:layout_height="95dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background_pressed_green"
        android:fontFamily="@font/myriadr"
        android:paddingLeft="40sp"
        android:paddingTop="10sp"
        android:paddingRight="40sp"
        android:paddingBottom="10sp"
        android:text="SUBMIT"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.github.gcacace.signaturepad.views.SignaturePad
        android:id="@+id/signature_pad"
        android:layout_width="950dp"
        android:layout_height="296dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        app:clearOnDoubleClick="true"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:penColor="@android:color/black" />
</androidx.constraintlayout.widget.ConstraintLayout>
